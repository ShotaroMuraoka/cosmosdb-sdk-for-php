{
    "name": "muraokashotaro/cosmosdb-php",
    "description": "A simple CosmosDB client for PHP",
    "require": {
        "php": ">=8.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "ShotaroMuraoka\\CosmosDb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ShotaroMuraoka",
            "email": "shotaro1987@hotmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
